<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/v_margin"
    android:gravity="center_vertical"
    tools:context="sh1457.test.com.grand.AddActionActivity">

    <include layout="@layout/titlebar"
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/action_add_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/action_add_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/h_margin"
        android:layout_marginTop="@dimen/v_margin"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/action_add_txt"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorBlack" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/gesture_action_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/h_margin"
        android:layout_marginTop="@dimen/v_margin"
        app:layout_constraintTop_toBottomOf="@+id/action_add_txt"
        app:layout_constraintLeft_toLeftOf="parent" >

    </android.support.v7.widget.RecyclerView>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/h_margin"
        android:layout_marginBottom="@dimen/v_margin"
        android:elevation="2dp"
        android:scaleX="2.0"
        android:scaleY="2.0"
        android:background="@color/colorPrimary"
        android:tint="@color/colorAccent"
        android:src="@android:drawable/ic_input_add" />

</android.support.constraint.ConstraintLayout>
